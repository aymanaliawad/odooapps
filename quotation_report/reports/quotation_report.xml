<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
       <template id="quotation_report_nw">
              <t t-call="web.html_container">
                     <t t-as="o" t-foreach="docs">
                            <div t-attf-class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                                   <div class="page">
                                          <header>
                                                 <t t-if="o.company_id.quotation_header">
                                                        <img style="width:100%;z-index:800;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.quotation_header)"/>
                                                 </t>
                                          </header>

                                          <br/>

                                          <table>
                                                 <style>
                                                        table {
                                                        font-family: arial, sans-serif;
                                                        border: 1px solid black;
                                                        border-collapse: collapse;
                                                        width: 100%;
                                                        }

                                                        tr:nth-child(even) {
                                                        background-color: #dddddd;

                                                        }
                                                        td,th,tr{
                                                        border: 1px solid black;
                                                        padding: 8px;

                                                        }
                                                 </style>

                                                 <tr style="width:100%;">
                                                        <td colspan="3" style="width:100%; text-align: center; background-color:#7e9cce;">
                                                               <b><span style="color:#ffffff;">QUOTATION INFO / بيانات العرض</span></b>
                                                        </td>
                                                 </tr >
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;" ><b><span> Quotation Number </span></b></td>
                                                        <td style="width:50%; text-align: center;" ><span t-field="o.name"/></td>
                                                        <td style="width:25%; text-align: right;" ><b><span>رقم العرض</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Date </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.date_order"/></td>
                                                        <td style="width:25%;text-align: right"><b><span>التاريخ</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> VAT Number </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.partner_id.vat"/> </td>
                                                        <td style="width:25%; text-align: right"><b><span>الرقم الضريبي</span></b></td>
                                                 </tr>

                                          </table>
                                          <br/>

                                          <table>

                                                 <tr style="width:100%;">
                                                        <td colspan="3" style="width:100%; text-align: center; background-color:#7e9cce;">
                                                               <b><span style="color:#ffffff;">CUSTOMER INFO / بيانات العميل</span></b></td>
                                                 </tr >
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;" ><b><span>Customer Name</span></b></td>
                                                        <td style="width:50%; text-align: center;" ><span t-esc="o.partner_id.name"/>
                                                        </td>
                                                        <td style="width:25%; text-align: right"><b><span>إسم العميل</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span>Address</span></b></td>
                                                        <td style="width:50%; text-align: center;">
                                                               <t t-if="o.partner_id.child_ids">
                                                                      <span t-esc="o.partner_id.child_ids[0].street"/>,
                                                                      <span t-esc="o.partner_id.child_ids[0].city"/>
                                                               </t>
                                                        </td>
                                                        <td style="width:25%;text-align: right"><b><span>العنوان</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Mobile </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.partner_id.mobile"/></td>
                                                        <td style="width:25%; text-align: right"><b><span>موبايل</span></b></td>

                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> E mail </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.partner_id.email" /></td>
                                                        <td style="width:25%;text-align: right"><b><span>البريد الإلكتروني</span></b></td>
                                                 </tr>
                                          </table>
                                          <br/>
                                          <t t-set="subtotal" t-value="0"/>
                                          <t t-set="discount" t-value="0"/>

                                          <table>
                                                 <tr style="width:100%; text-align: center; background-color:#7e9cce;">
                                                        <td style="width:10%;" ><span style="color:#ffffff;">المجموع</span></td>
                                                        <td style="width:10%;" ><span style="color:#ffffff;">سعر الوحدة</span></td>
                                                        <td style="width:10%;" ><span style="color:#ffffff;">الكمية</span></td>
                                                        <td style="width:10%;" ><span style="color:#ffffff;">الوحدة</span></td>
                                                        <td style="width:40%;" ><span style="color:#ffffff;">بيانات الصنف</span></td>
                                                        <td style="width:20%;" ><span style="color:#ffffff;"> رقم الصنف </span></td>
                                                 </tr>

                                                 <tr style="width:100%; text-align: center; background-color:#7e9cce;">
                                                        <td style="width:10%;" ><span style="color:#ffffff;"> Total </span></td>
                                                        <td style="width:10%;" ><span style="color:#ffffff;"> Unit Price </span></td>
                                                        <td style="width:10%;" ><span style="color:#ffffff;"> Quantity </span></td>
                                                        <td style="width:10%;" ><span style="color:#ffffff;"> Unit </span></td>
                                                        <td style="width:40%;" ><span style="color:#ffffff;">Description</span></td>
                                                        <td style="width:20%;" ><span style="color:#ffffff;"> Item No </span></td>
                                                 </tr>
                                                 <t t-foreach="o.order_line" t-as="line">
                                                        <t t-set="subtotal" t-value="subtotal+ line.price_subtotal"/>
                                                        <t t-set="discount" t-value="discount + line.discount "/>

                                                        <tr style="width:100%;">
                                                               <td style="width:10%;text-align: center;" ><span t-esc="line.price_subtotal"/></td>
                                                               <td style="width:10%;text-align: center;" ><span t-esc="line.price_unit"/></td>
                                                               <td style="width:10%;text-align: center;" ><span t-esc="line.product_uom_qty"/></td>
                                                               <td style="width:10%;text-align: center;" ><span t-esc="line.product_uom_qty"/></td>
                                                               <td style="width:40%;text-align: center;" ><span t-esc="line.name"/></td>
                                                               <td style="width:20%;text-align: center;" ><span t-esc="line.product_id.default_code"/></td>
                                                        </tr>
                                                 </t>
                                          </table>
                                          <br/>

                                          <table>
                                                 <tr style="width:100%; ">
                                                        <td style="width:10%; text-align: center;" ><span t-esc="subtotal" /></td>
                                                        <td style="width:10%; text-align: center;" ><span> Total - المجموع </span></td>
                                                        <td rowspan="4" style="width:10%; text-align: center;" ><span>  </span></td>
                                                        <td rowspan="4" style="width:10%; text-align: center;" ><span> ملاحظة<br/>
                                                               Note </span></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:10%; text-align: center;" ><span t-esc="discount" /></td>
                                                        <td style="width:10%; text-align: center;" ><span> Disc - تخفيض </span></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:10%; text-align: center;" ><span t-esc="o.amount_tax" /></td>
                                                        <td style="width:10%; text-align: center;" ><span> VAT - ضريبة القيمة المضافة</span></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:10%;text-align: center; " ><span t-esc="o.amount_total" /></td>
                                                        <td style="width:10%; text-align: center;"  ><span> Total With VAT - إجمالي مع ضريبة القيمة المضافة</span></td>

                                                 </tr>
                                          </table>
                                          <div style="width:1000px;position:absolute;top:1320px; page-break-inside: avoid;">

                                                 <!--                                                 <footer style="width:1000px;margin-left:-30px;">-->
                                                 <t t-if="docs.company_id.quotation_footer">
                                                        <img style="width:100%;z-index:800;"
                                                             t-att-src="'data:image/png;base64,%s' % to_text(docs.company_id.quotation_footer)"/>
                                                 </t>
                                                 <!--                                                 </footer>-->
                                          </div>

                                          <div style="page-break-before: always;">

                                          </div>
                                          <br/>
                                          <br/>


                                          <header style="margin-top: -50px;" >
                                                 <t t-if="o.company_id.quotation_header" >
                                                        <img style="width:100%;z-index:800;"
                                                             t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.quotation_header)"/>
                                                 </t>
                                          </header>
                                          <br/>
                                          <br/>
                                          <br/>

                                          <table>


                                                 <tr style="width:100%;">
                                                        <td colspan="3" style="width:100%; text-align: center; background-color:#7e9cce;">
                                                               <b><span style="color:#ffffff;">Term and Conditions / الشروط والأحكام</span></b>
                                                        </td>
                                                 </tr >
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;" ><b><span> Quotation Validation </span></b></td>
                                                        <td style="width:50%; text-align: center;" ><span t-field="o.validity_date"/></td>
                                                        <td style="width:25%; text-align: right"><b><span>صلاحية العرض</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Warranty </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.warranty"/> <span t-field="o.warranty_type"/></td>
                                                        <td style="width:25%;text-align: right"><b><span> الضمان </span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Payment </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.payment_term_id.name"/></td>
                                                        <td style="width:25%;text-align: right"><b><span> طريقة الدفع </span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span>Bank Name</span></b></td>
                                                        <td style="width:50%; text-align: center;">
                                                               <t t-if="o.company_id.partner_id.bank_ids">
                                                                      <span t-field="o.company_id.partner_id.bank_ids[0].bank_id.name"/>
                                                               </t>
                                                        </td>
                                                        <td style="width:25%;text-align: right"><b><span>إسم البنك</span></b></td>
                                                 </tr>

                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> IBAN No </span></b></td>
                                                        <td style="width:50%; text-align: center;">
                                                               <t t-if="o.company_id.partner_id.bank_ids">
                                                                      <span t-field="o.company_id.partner_id.bank_ids[0].acc_number"/>
                                                               </t>
                                                        </td>
                                                        <td style="width:25%;text-align: right"><b><span>رقم الحساب</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Supply Duration </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.delivery_duration"/>  </td>
                                                        <td style="width:25%;text-align: right"><b><span>فترة التوريد</span></b></td>
                                                 </tr>

                                          </table>

                                          <br/>
                                          <br/>

                                          <table>
                                                 <tr style="width:100%;">
                                                        <td style="width:100%; text-align: center; background-color:#7e9cce;">
                                                               <b><span style="color:#ffffff;">Warranty Terms / شروط الضمان</span></b>
                                                        </td>
                                                 </tr >
                                                 <tr style="width:100%;height:100px;">
                                                        <td style="width:70%; text-align: center;" ><span t-field="o.warranty_term"/></td>
                                                 </tr >
                                          </table>
                                          <br/>
                                          <br/>


                                          <table>
                                                 <tr style="width:100%;">
                                                        <td colspan="3" style="width:100%; text-align: center; background-color:#7e9cce;">
                                                               <b><span style="color:#ffffff;">SENDER / المرسل</span></b>
                                                        </td>
                                                 </tr >
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;" ><b><span> Sender </span></b></td>
                                                        <td style="width:50%; text-align: center;" ><span t-field="o.create_uid.name"/></td>
                                                        <td style="width:25%; text-align: right"><b><span>إسم المرسل</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Mobile </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.create_uid.mobile"/></td>
                                                        <td style="width:25%;text-align: right"><b><span>موبايل</span></b></td>
                                                 </tr>
                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Email </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.create_uid.email"/> </td>
                                                        <td style="width:25%; text-align: right"><b><span> البريد الإلكتروني </span></b></td>

                                                 </tr>

                                                 <tr style="width:100%;">
                                                        <td style="width:25%;"><b><span> Job Position </span></b></td>
                                                        <td style="width:50%; text-align: center;"><span t-field="o.create_uid.function"/> </td>
                                                        <td style="width:25%;text-align: right"><b><span>الوظيفة</span></b></td>

                                                 </tr>

                                          </table>
                                          <div style="width:1000px;position:absolute;top:2800px; page-break-inside: avoid;">

                                                 <!--<footer style="width:1000px;margin-left:-30px;">-->
                                                 <t t-if="docs.company_id.quotation_footer">
                                                        <img style="width:100%;z-index:800;" t-att-src="'data:image/png;base64,%s' % to_text(docs.company_id.quotation_footer)"/>
                                                 </t>
                                                 <!--</footer>-->
                                          </div>

                                   </div>
                            </div>
                     </t>
              </t>
       </template>




       <record id="quotation_report_paper_format" model="report.paperformat">
              <field name="name">Quotation Report</field>
              <field name="default" eval="True" />
              <field name="format">A4</field>
              <field name="page_height">0</field>
              <field name="page_width">0</field>
              <field name="orientation">Portrait</field>
              <field name="margin_top">5</field>
              <field name="margin_bottom">0</field>
              <field name="margin_left">5</field>
              <field name="margin_right">5</field>
              <field name="header_line" eval="False" />
              <field name="header_spacing">0</field>
              <field name="dpi">90</field>
       </record>

       <report id="quotation_report_new_sale"
               model="sale.order"
               string="Quotation Report"
               report_type="qweb-pdf"
               name="quotation_report.quotation_report_nw"
               file="quotation_report.quotation_report_nw"
               paperformat="quotation_report_paper_format"/>
</odoo>